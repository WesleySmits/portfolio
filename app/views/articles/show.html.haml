.intro
	.container
		%h2.title= @article.title

.container.row
	#post-wrapper.small-10.small-offset-1.large-8.large-offset-0.columns
		- if @article.image.exists? then
			= image_tag @article.image.url, width: '768', alt: @article.title, title: @article.title
		%p.body
			= markdown @article.body
		.post-meta
			.published
				%i.fa.fa-calendar
				%span= @article.created_at.to_date.to_formatted_s(:long)
				%meta{content: @article.created_at.utc.iso8601, itemprop: "datePublished"}
			.author
				%i.fa.fa-user
				%span 
					by 
					= link_to 'Wesley Smits', 'https://www.google.com/+WesleySmits', title: 'Wesley Smits on Google+', rel: 'author'
			.social-sharing
				%strong Share this post
				%ul
					%li.google
						%a{:href => 'https://www.google.com/+WesleySmits', :title => 'Wesley Smits on Google+', :target => '_blank'}
							%i.fa.fa-google-plus
					%li.facebook
						%a{:href => 'https://www.facebook.com/wesley.robert.smits', :title => 'Wesley Smits on Facebook', :target => '_blank'}
							%i.fa.fa-facebook
					%li.twitter
						%a{:href => 'https://twitter.com/WesleySmits93', :title => 'Wesley Smits on Twitter', :target => '_blank'}
							%i.fa.fa-twitter
					%li.linkedin
						%a{:href => 'https://www.linkedin.com/in/wesleysmits93', :title => 'Wesley Smits on LinkedIn', :target => '_blank'}
							%i.fa.fa-linkedin
	= render 'partials/sidebar'
				
= link_to 'Back to overview page', articles_path, :class => "button [radius round]"
= link_to 'Edit article', edit_article_path(@article), :class => "button [radius secondary round]"
= link_to 'Delete article', article_path(@article), :class => "button [radius alert round]", :method => :delete, data: { confirm: "Are you sure you want to delete this article?"}