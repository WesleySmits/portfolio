%header#header.row
	.container
		%h1#logo.small-10.small-offset-1.large-4.large-offset-0.columns
			- if current_page?('/') 
				= link_to 'Wesley Smits', '#intro', :title => "Wesley Smits"
			- else
				= link_to 'Wesley Smits', root_url, :title => "Wesley Smits"
		%nav{:role => 'navigation', :id => 'primary-navigation', :class => 'small-10 small-offset-1 large-6 large-offset-0 columns'}
			%ul
				%li= link_to 'About me', '#about-me'
				%li= link_to 'Portfolio', '#portfolio'
				%li= link_to 'Blog', '/articles'
				%li= link_to 'Contact', '#contact'